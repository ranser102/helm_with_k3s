pipeline {
    environment {
        registry = "eransery/py_k8s"
        registryCredential = 'erandockerhub'
    }
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Building image') {
            steps{
                script {
                docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
}
